// --------------------------------------------------------------
// TESTIMONIAL
// --------------------------------------------------------------

#container-testimonial {border-top:$default-border-color; margin-bottom:100px;}

#container-testimonial h1 {text-align:center; margin:70px 0;}

#container-testimonial h2 {font-size:18px; text-align:left; text-variants:small-caps;}

.portrait img {
	border-radius: 150px;
	-webkit-border-radius: 150px;
	-moz-border-radius: 150px;
	-webkit-filter: grayscale(70%); 
  	filter: grayscale(70%);
}

.portrait p {text-align:left; max-width:320px;}

// --------------------------------------------------------------
// LECTURES BOX
// --------------------------------------------------------------

#lectures-list, #main-library {
	border-top:$default-border-color;

	h1 {
		text-align: center;
		margin:100px auto;
	}
	
	.col-md-4 {
		margin:-20px auto 100px auto;
	}

	p {
		padding:5px 10px;
	}

}

.btn-default {
		color:#fff;
		position:absolute;
		bottom:10px;
		font-size:18px;
		margin:10px 70px;
		padding:12px;
		height:50px;
		width:150px;
		text-transform:uppercase;
	}



.lecture-box {
		background:#fff;
		height:350px;
		width:303px;
		border:$default-border-color;
}	

.lecture-box:hover {
	transition: all 0.1s ease-in;
	box-shadow: inset 0 1px #fff, 0 1px 3px #EBEBEB;
	-moz-box-shadow: inset 0 1px #fff, 0 1px 3px #EBEBEB;
	-webkit-box-shadow: inset 0 1px #fff, 0 1px 3px #EBEBEB;
}	

