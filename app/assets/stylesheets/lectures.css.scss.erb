// --------------------------------------------------------------
// BUTTONS
// --------------------------------------------------------------


a.btn, button.btn, input.btn {font-family:$proxima-nova; font-weight: 700; font-family: $proxima-nova; text-transform: uppercase; text-shadow:none; box-shadow: none;}

a.btn-orange {
	color:#fff !important;
	background:$orange-peel !important;
	border-color:$orange-peel !important;
	font-size:18px;
	border-radius:0;
}

a.btn-orange:hover {
	background:$orange-peel !important;
	border-color:$orange-peel !important;
	transition:background 0.2s ease-in;
}


button.btn-orange, input.btn-orange {
	color:#fff !important;
	background:$orange-peel !important;
	border-color:$orange-peel !important;
	font-size:18px;
	border-radius:0 !important;
}

button.btn-orange:hover, input.btn-orange:hover {
	background:$orange-peel !important;
	border-color:$orange-peel !important;
	transition:background 0.2s ease-in;
}

a.btn-shaft {
	color:#fff !important;
	background:$mine-shaft !important;
	border-color:$mine-shaft !important;
	font-size:16px;
	border-radius:0;
	padding:16px 30px;
}


button.btn-form, input.btn-form {
	padding:15px 50px;
	text-decoration:none;
	color:#fff !important;
	background:$mine-shaft !important;
	border-color:$mine-shaft !important;
