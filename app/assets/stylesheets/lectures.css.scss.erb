/* PROGRESS BAR */

progress[value] {
   -webkit-appearance: none;
   appearance: none;
	height:15px;
	width:100%;
}

progress[value]::-webkit-progress-bar {
  background-color:#E2E5E9;
  border-radius: 10px;
}

progress[value]::-webkit-progress-value {
  background:#e67e22;
  background-image:
	   -webkit-linear-gradient(-45deg, 
	                           transparent 40%,  
	                            transparent 66%),
	   -webkit-linear-gradient(left, #3BCC9A 33%, #f1c40f, #f39c12, #d35400);

  border-radius: 10px; 
  background-size: 45px 25px, 100% 100%, 100% 100%;
}

 
