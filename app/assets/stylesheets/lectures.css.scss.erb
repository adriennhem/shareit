@import 'config';

//--------------------------------------------------------------
//  PROFILE SETTINGS
// --------------------------------------------------------------





/* DASHBOARD STUDENTS */


#enrolled-courses {
    position: relative;
    top: 100px;
}


.dashboard-student-box {
    border-radius: 0;
    width: 350px;
    background: $white;
    border: 1px solid #d5d9da;
    margin-left: 10px;
}


.dashboard-student-box img {
    max-width: 100%;
}



.section-box-bottom {
    background: #F2F2F2;
    width: 100%;
    padding: 10px 10px 5px 10px;
    border-radius: 0;
    box-shadow: none;
}

/* PROGRESS BAR */

progress[value] {
    -webkit-appearance: none;
    appearance: none;
    height: 15px;
    width: 100%;
}

progress[value]::-webkit-progress-bar {
    background-color: #E2E5E9;
    border-radius: 10px;
}

progress[value]::-webkit-progress-value {
    background: #e67e22;
    background-image: -webkit-linear-gradient(-45deg, 
                               transparent 40%,  
                                transparent 66%),
       -webkit-linear-gradient(left, $bezier 33%, $bezier, $bezier, $bezier);
    border-radius: 10px;
    background-size: 45px 25px, 100% 100%, 100% 100%;
}




//--------------------------------------------------------------
// INDEX LECTURE
// --------------------------------------------------------------



.lecture-index-box {
    border: $border;
    background: #FFFFFF;
    padding: 10px 10px;
}

.lecture-index-video {
    padding: 5px 5px;
}




//--------------------------------------------------------------
//  Lecture SHOW
// --------------------------------------------------------------

#dashboard-header .btn-bezier {
    position: absolute;
    top: 20px;
    right: 200px;
}

#dashboard-header .republish {
