//  PROFILE SETTINGS
// --------------------------------------------------------------

/* General properties */

span.by-teacher {
	color:$shamrock;
}

/*Progress bar show profile */

progress[value] {
   -webkit-appearance: none;
   appearance: none;
	height:25px;
	width:100%;
}

progress[value]::-webkit-progress-bar {
  background-color:$lightGrey;
  border-radius: 2px;
  box-shadow: 0 2px 2px rgba(0, 0, 0, 0.25) inset;
}

progress[value]::-webkit-progress-value {
  background:$shamrock;
  background-image:
	   -webkit-linear-gradient(-45deg, 
	                           transparent 40%, rgba(0, 0, 0, .1) 33%, 
	                           rgba(0,0, 0, .1) 66%, transparent 66%);

  border-radius: 2px; 
  background-size: 45px 25px, 100% 100%, 100% 100%;
}

 

