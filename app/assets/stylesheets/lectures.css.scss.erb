.btn {
	font-weight: 500;
	text-transform: uppercase;
	text-shadow: none;
	box-shadow: none;
	border-radius: 0;
}

.btn:hover {
	color: #ffffff;
}


a.btn-bezier, button.btn-bezier, input[type="submit"].btn-bezier {
	background: $bezier;
	color: #ffffff;

}

a.btn-bezier:hover, button.btn-bezier:hover, input[type="submit"].btn-bezier:hover {
	opacity: 0.9;
	transition: opacity 0.1s ease-in;
}

a.btn-bezier-border, button.btn-bezier-border, input[type="submit"].btn-bezier-border {
	border: 1px solid $bezier;
	color: $bezier;

}

a.btn-bezier-border:hover, button.btn-bezier-border:hover, input[type="submit"].btn-bezier-border:hover {
	background: $bezier;
	color: #ffffff;
	transition: all 0.1s ease-in;
}

.btn-large {
	font-size: 15px;
	padding: 15px 50px;
}

.btn-medium {
	font-size: 14px;
	padding: 10px 40px;
}

.btn-small {
	font-size: 13px;
	padding-bottom: 5px 25px;
}

.btn-round {
	border-radius: 20px;
