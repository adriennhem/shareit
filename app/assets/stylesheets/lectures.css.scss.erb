// --------------------------------------------------------------
// BOOTSTRAP CHANGES
// --------------------------------------------------------------

$navbar-default-bg:#333333;
$navbar-border-radius:0px;
$navbar-default-border:none;

// --------------------------------------------------------------
// SASS COLORS
// --------------------------------------------------------------

$primary-color:#1AAFD7;
$color-3:#F65A5B;
$color-4:#1abc9c;
$color-5:#3498db;
$color-jaune:#f1c40f;
$secondary-color:#FF5543;
$font-body-color:#666666;
$background-color:#F6F9FA;


// --------------------------------------------------------------
// SASS COLORS
// --------------------------------------------------------------

$font-body:'Hind', sans-serif;
$font-title:'Montserrat', sans-serif;

$font-default-size:16px;
$font-m-size:18px;
$font-l-size:20px;
$font-xl-size:28px;
$font-xxl-size:32px;
$default-border-color:1px solid #ebebeb;


// --------------------------------------------------------------
// IMPORT 
// --------------------------------------------------------------

@import "bootstrap-sprockets";
@import "bootstrap";

// --------------------------------------------------------------
// GENERAL SETTINGS
// --------------------------------------------------------------

html {text-rendering:optimizeLegibility;}

html a {text-decoration:none !important;}

body {
	font-family: 'Halant', serif;
	font-weight:300;
	padding-top:60px;
	font-size:18px;
	color:$font-body-color;
	line-height:32px;
}

h1, h2, h3, h4, h5, h6 {
	color:#333333;
 	font-family: $font-body;
 	font-weight:700;
 	/*font-variant: small-caps;*/
 	text-transform: uppercase;
 	}

h1 {font-size:32px; color:#384046;}

h2 {font-size:$font-xl-size;}

.alert {
	border-radius:0;
	background:rgba(75,202,156,0.7);
	 color:#ffffff;
	 height:40px;
	}

.alert ul li {
	margin-top:-10px;
	list-style: none; 
	text-align: center; 
	font-size: 14px; 
	text-transform: uppercase;
	font-family: $font-title;
}

.hidden { display: none; }

// --------------------------------------------------------------
// COLORS
// --------------------------------------------------------------

a.bg-fountain:hover {background:#53BBB4}

a.btn-default {color:#fff; border:none}

a.btn-default:hover {color:#fff; border:none}

a.mirage {color:#8D999F}

 // ----- COLORS ---- //

.white {color:white;}

.shamrock {color:#44CB9B}

  // ----- BACKGROUNDS ---- //


.bg-concrete {background:#F4F4F4;}

.bg-white {background:#fff !important}

.bg-steel {background: #666666}

.bg-footer {background:#333333;}


// --------------------------------------------------------------
// BORDERS
// --------------------------------------------------------------

.picture {border-radius:150px;}

.border-top {border-top:1px solid #ebebeb;}

// --------------------------------------------------------------
// SIZES
// --------------------------------------------------------------

 // ----- WIDTH ---- //


.width300 {width:300px;}

.width550 {width:550px; margin: 0 auto;}

.width700 {width:700px; margin: 0 auto;}

.width960 {max-width:960px; margin:0 auto;}

 // ----- HEIGHT ---- //

.height610 {height:610px}

// --------------------------------------------------------------
// POSITION
// --------------------------------------------------------------

.vertical {position:relative; top:50%; transform: translateY(-50%);}

 // ----- MARGIN ---- //

.margin-s {margin-top:40px;}

.margin-top-xs {margin-top:20px;}

.margin-s-l {margin-left:10px;}

.margin-l-l {margin-left:50px;}

.mb-60 {margin-bottom:60px;}

.mb-150 {margin-bottom:150px}

.margin-top-negative {margin-top:-70px;}

 // ----- PADDINGS ---- //

.pad10 {padding:10px 10px}

.pad5 {padding:5px 5px}

// ----- FLOAT ----- // 

.center {text-align:center;}

.float-left {float:left;}

.float-right {float:right;}

.clear {clear:both;}

.centerd {margin:0 auto}

// --------------------------------------------------------------
// FONTS
// --------------------------------------------------------------


// ----- FAMILY ----- // 

.montserrat {font-family:$font-title}


// ----- FONT SIZE ----- // 

.size12 {font-size:14px}

.s-size {font-size:$font-default-size;}

.l-size {font-size:$font-l-size;}

.medium {font-size:24px;}

.thin {font-weight:400; font-family:$font-body}

.large {font-size:56px;}

.big {font-size:150px !important;}

// ----- FONT TRANSFORMATIONS ----- // 

.small-caps {font-variant: small-caps;}

// --------------------------------------------------------------
// BUTTONS
// --------------------------------------------------------------

a.btn-primary {
	text-decoration:none;
	color:#fff !important;
	background:#44CB9B !important;
	border-color:#44CB9B !important;
	font-size:18px;
	border-radius:0;
	text-transform:uppercase;
}

a.btn-primary:hover {
	background:#54DEAC !important;
	border-color:#54DEAC !important;
	transition:background 0.2s ease-in;
}

a.btn {font-family:$font-body;}

input.btn-primary-big {
	padding:15px 50px;
	text-decoration:none;
	color:#fff !important;
	background:#333333 !important;
	border-color:#333333 !important;
	font-size:14px;
	border-radius:0 !important;
	text-transform:uppercase;
}

input.btn-primary-big:hover {
	transition:all 0.1s ease-in;
	background:#44CB9B !important;
	border-color:#44CB9B !important;
}



// --------------------------------------------------------------
// MODAL
// --------------------------------------------------------------

.modal-content {padding:40px 40px;}

.modal-content h1 {margin-bottom:30px;}

.modal-form {margin-left:70px;}

.modal-form label {font-weight:300;}

.modal-form input.email, .modal-form input.password {width:370px !important; margin-bottom:10px}

.modal-content input.btn-primary-big {margin-top:20px; padding:20px 150px;}

.modal-content a {color:#44CB9B; font-size:14px;}

// --------------------------------------------------------------
// NAVBAR
// --------------------------------------------------------------
nav {height:60px;}

nav.navbar.shrink {
	opacity:0.98;
	transition:opacity 0.1s ease-in;
}


.navbar-nav > li > a:hover {color:#384046;}


.navbar-nav > li > a {
  font-family: $font-body;
  font-weight:400;
  padding-top:20px !important;
  color:#fff !important;
  font-size: 14px;
  text-decoration: none;
  text-transform:uppercase !important;
}


.navbar-left li a {text-transform: none !important}

.navbar-right li a:hover {color:#4BCA9C !important; transition: all 0.1s ease-in;}

.navbar-left > li > a {
	padding-top:10px !important;
}

.navbar-right a.btn-primary {
	margin-top:5px !important;
	text-decoration:none;
	color:#fff !important;
	background:#44CB9B !important;
	border-color:#44CB9B !important;
	font-size:12px;
	border-radius:0;
	text-transform:uppercase !important;
}

.navbar-right a.btn-primary:hover {
	color:#fff !important;
	background:#54DEAC !important;
	border-color:#54DEAC !important;
	transition:background 0.2s ease-in;
}

