<%= render 'lecture_band' %>




<div class="row" id="lesson-container">
	<div class="col-md-12">
	
	<div class="col-md-8">
	<div id="lesson-description-container">
		<h1><%= @lecture.title %></h1>
		<p><%= @lecture.description %></p>
	</div>
	</div>

	<div class="col-md-4">
		<div class="panel panel-defaultpull-right">
			<div class="panel-heading">
				Instructor
			</div>
			<div class="panel-body">
				<p>Adrien Nhem</p>
				<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ad iusto nulla saepe aspernatur blanditiis totam distinctio. Nostrum vero est vel perferendis excepturi assumenda consequuntur animi ducimus saepe sapiente, velit eaque!</p>
			</div>
		</div> <!-- instructor -->
	</div>

	</div> <!-- .col-md-12 -->
</div> <!-- #lesson-container -->


	<div class="col-md-12">
		<!-- chaque lecture -->
	 <% @lessons.each do |lesson| %>
	 <div class="col-md-3"></div>
	 <div class="col-md-7">
		<div class="panneau-lesson col-md-offset-3 col-md-12">
			<div class="panneau-lesson-title col-md-1">
				<h1>
					<%= lesson.etape %>.
				</h1>	
			</div>
		<div class="panneau-lesson-description col-md-9">
			<h1><%= lesson.title %></h1> 
		</div>
		<div class="panneau-lesson-footer col-md-2">
				<%= link_to [lesson.lecture, lesson] do %>
				<span class="glyphicon glyphicon-play-circle"></span>
				<% end %>
		</div>

	</div>
	</div> <!-- end of col-md-7 -->
	<% end %>
		
	</div> 
</div>







