 <script type="text/javascript">
    mixpanel.track("Visit Sign In")
</script>


<div class="container-fluid"> 
  <div class="panel-devise">

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Workshopr.</h3>
  </div>
  <div class="panel-body">
    <p>Sign In</p>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
       <%= f.input :email, label: false, placeholder: 'Email', input_html: { class: "form-control" }  %>
       </div>
       <div class="form-group">
       <%= f.input :password, label: false, placeholder: 'Password', input_html: { class: "form-control" }  %>
       </div>
       <%= f.button :submit, 'Sign In', class: "font20 btn-bezier btn" %>
    <% end %>
    
  </div>
</div> 
  
      <%= render "devise/shared/links" %>

   </div>
    
    


    </div>  <!-- end .panel-lock -->
</div> <!-- end #content -->

