<% set_meta_tags noindex: true %>

<% content_for :title_page do %>
Workshopr - Sign Up
<% end %>

 <script type="text/javascript">
    mixpanel.track("Visit Sign Up")
</script>

<div class="container-fluid"> 
  <div class="panel-devise">

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Workshopr.</h3>
  </div>
  <div class="panel-body">
    <p>Get Started!</p>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        
      <div class="form-group">
       <%= f.input :name, required: true, autofocus: true, label: false, placeholder: 'Full Name', input_html: { class: "form-control"} %>
      </div>

      <div class="form-group">
       <%= f.input :email, label: false, placeholder: 'Email', input_html: { class: "form-control"} %>
      </div>

       <div class="form-group">
       <%= f.input :password, label: false, placeholder: 'Password', input_html: { class: "form-control"} %>
       </div>
      
       <div class="form-group">
       <%= f.input :password_confirmation, label: false, placeholder: 'Password Confirmation', input_html: { class: "form-control"} %>
       </div>

        <%= f.select(:role, User.roles.keys.reject {|role| role == "author" || role == "institution"}.map {|role| [role.titleize,role]}) %>

       <%= f.button :submit, 'Register', class: "font20 btn-bezier btn" %>
    <% end %>
    <p class="center">By clicking 'Register' I agree Workshopr's Terms of Service </p>
  </div>
</div> 
  
      <%= render "devise/shared/links" %>

   </div>
    
    


    </div>  <!-- end .panel-lock -->
</div> <!-- end #content -->

