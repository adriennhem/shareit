

<h1 id="dashboard-edit">Update your info</h1>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: "dashboard-edit-form", method: :put }) do |f| %>
  <%= devise_error_messages! %>

    <%= f.input :picture, as: :file, label: false %>
  
   <%= f.input :first_name, label: false, placeholder: "First Name" %>
   <%= f.input :last_name, label: false, placeholder: "Last Name" %>
   <%= f.input :email, label: false, placeholder: "Email" %>

 

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  
   <%= f.input :password, label: false, placeholder: "New Password: Leave blank for not changing", input_html: {  autocomplete: "off" } %>
   <%= f.input :password_confirmation, label: false, placeholder: "Re-enter changed password", input_html: {  autocomplete: "off" } %>
   <%= f.input :current_password, label: false, placeholder: "Enter password to confirm changes", input_html: { autocomplete: "off" } %>

 <%= f.button :button, "Save Changes", class: "btn-bezier btn", data: {disable_with: "Update <i class='fa fa-spinner fa-spin'></i>"} %>
<% end %>


