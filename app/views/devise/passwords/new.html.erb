
<div class="reset_password">

<h1>Forgot your password?</h1>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, id: 'reset_password') do |f| %>
  <%= devise_error_messages! %>
  <%= f.input :email %>
  <%= f.button :submit, 'Send me reset password instructions', class: 'btn-primary-big' %>
<% end %>

<%= render "devise/shared/links" %>

</div>
