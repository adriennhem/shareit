


<div class="container-fluid"> 
  <div class="panel-devise">

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Forgot your password?</h3>
  </div>
  <div class="panel-body">
   <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, id: 'reset_password') do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
  <%= f.input :email, input_html: { class: "form-control"} %>
  </div>
  <%= f.button :submit, 'Send me reset password instructions', class: 'font20 btn-bezier' %>
<% end %>
  </div>
</div> 
  
      <%= render "devise/shared/links" %>

   </div>
    
    


    </div>  <!-- end .panel-lock -->
</div> <!-- end #content -->