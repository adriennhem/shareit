<script type="text/javascript">
    mixpanel.track("Visit Contact Us")
</script>

<% content_for :title_page do %>
Workshopr - Contact Us
<% end %>

 <% content_for :navbar do %>
      <%= render 'layouts/navbar_blog' %>
 <% end %>

<div class="row row-header mb-40">
     <h1 class="contact center uppercase white margin-s">Get in touch with us</h1>
</div>


<div class="row">
  <div class="contact-form">
    <%= simple_form_for @contact do |f| %>
      <%= f.input :name, :required => true %>
      <%= f.input :email, :required => true %>
      <%= f.input :message, as: :text, :required => true, input_html: {rows: 5, size: 20} %>
        <div class= "hidden">
        <%= f.input :nickname, :hint => 'Leave this field blank!' %>
      </div>
      <div>
        </br>
        <%= f.button :submit, 'Send message', class: "btn-bezier btn-large" %>
      </div>
    <% end %>
  </div>
</div>


