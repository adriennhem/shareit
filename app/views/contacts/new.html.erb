<script type="text/javascript">
    mixpanel.track("Visit Contact Us")
</script>

 <% content_for :navbar do %>
      <%= render 'pages/header_home' %>
 <% end %>

<div class="row">
  <div id="index-contact">
    <div class="heading">
       <h1 class="contact">Get in touch with us</h1>
    </div>
  </div>
</div>


<div class="container-contact width550">


<div id="contact-form">
  <%= simple_form_for @contact do |f| %>
    <%= f.input :name, :required => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :message, :as => :text, :required => true %>
      <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.button :submit, 'Send message', :class=> "btn-bezier" %>
    </div>
  <% end %>
</div>

</div>

