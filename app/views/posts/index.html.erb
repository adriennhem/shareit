 <% content_for :navbar do %>
      <%= render 'pages/header_home_2' %>
 <% end %>

 <% @posts.each do |post| %>

 	<h4><%= post.blog_category.title %></h4>
	<h2><%= post.title %></h2>
	<h3><%= post.user.email %></h3>
	<p><%= post.content %></p>
	<p>Tags: <%= raw post.tag_list.map { |t| link_to t, tag_path(t) }.join(' ') %></p>
	<%= link_to "read more", post %>
 <% end %>