<span class="payment-logo bezier uppercase">Workshopr.</span>

<div class="row row-payment ">
  <div class="container-fluid">
    <h2 class="center mb-60">Get started with: <%= @lecture.title %><br> </h2>

    <div class="col-md-12">

      <div class="col-md-6">
        <h3 class="weight600 center">What you'll get for $99</h3>
        <ul class="margin-s benefits-list">
          <li class="mb-20">Get access to the course for one year</li>
          <li class="mb-20">Get Access to challenges related to the course</li>
          <li>Get access to the private Slack channel where you can get precious advice from teachers, companies, and other students</li>
        </ul>
      </div>

      <div class="col-md-5">
        <div class="form-payment">
          <h3 class="weight600 center mb-40">One-off Payment</h3>


          <%= form_for @enrollment do |f| %>
  <% if flash[:error].present? %>
    <div id="error_explanation">
      <p><%= flash[:error] %></p>
    </div>
  <% end %>
  <p>
    <label class="amount">
      <span>You'll pay: $99.00</span>
    </label>
  </p>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :lecture_id, value: @lecture.id %>
  <%= f.hidden_field :amount, value: @final_amount %>
  <p>
    <%= label_tag(:couponCode, 'Coupon:') %>
    <%= text_field_tag(:couponCode) %>
  </p>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= ENV['PUBLISHABLE_KEY'] %>"
          data-name="Workshopr LTD"
          data-description="<%= @lecture.title %>"
          data-amount="9900"
          data-email="<%= current_user.email %>"
          data-image="https://s3-us-west-2.amazonaws.com/workshopr-picture/assets/pictures/logo-certificate.jpg"
          data-locale="auto"></script>
<% end %>
          

        
        </div>
      </div>

    </div>
  </div>
</div>