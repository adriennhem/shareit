<div class="row margin-s">

    <div class="container width960">
         <%= link_to 'Back', @lecture %>
         <% if @previous %>
            <%= link_to "Previous", [@lecture, @previous] %>
         <% end %>
          <% if @next %>
            <%= link_to "Next", [@lecture, @next] %>
         <% end %>
	<div class="center">
		<%= @lesson.vid.html_safe %>
	</div>
    <h1 class="margin-s">Step by Step</h1>
    <p class="margin-s"><%=  @lesson.description.html_safe %></p>
    
    <h1 class="margin-s">Leave a comment</h1>
    <div class="margin-s" id="disqus_thread"></div>
