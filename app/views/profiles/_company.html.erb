<!-- Menu Toggle Script -->
<script>
$("#menu-toggle").click(function(e) {
e.preventDefault();
$("#wrapper").toggleClass("toggled");
});
</script>

<% content_for :navbar do %>
    <%= render 'layouts/sidebar_company' %>
<% end %>

 <%= link_to 'new project', new_project_path, remote: true %>


<h1>My Projects</h1>
	<% if @projects.count == 0 %>
		<% flash[:success] = "You did not publish any projects yet" %>
	<% end %>



<div class="row row-projects">
	<% @projects.each do |project| %>
	<div class="col-md-5">
		<div class="box-project">
		<h2><%= project.title %></h2>
		<h3><%= project.created_at %></h3>
		<p><%= project.body %></p>
		<%= link_to 'Details', project, remote: true %>
		<%= link_to 'Edit', edit_project_path(project), remote: true %>
		<%= link_to 'Delete', { :controller => 'projects', :action => 'destroy', :id => project.id }, 
                      { :confirm => 'Are you sure?', :method => :delete} %> 

		</div>
	</div>

 <% end %> 
</div>
 


