
<% content_for :navbar do %>
	<%= render 'layouts/sidebar_student' %>
<% end %>

<div class="row enrolled">
	<h1 class="dashboard-student-title">Enrolled Courses</h1>
		<% @user.lectures.each do |lecture| %>
</div>

			<div class="col-md-6 margin-s mb-150">

	          <div class="dashboard-student-box">
	          	
		          <%= link_to lecture, remote: true do %>	
		           <h1><%= lecture.title %></h1> 
		           <% end %>
		         


	            <p class="lecture-box-profile-description"><%= truncate(lecture.description, length: 150) %> <span class="by-teacher">by <%= lecture.teacher.name %></span> </p>
	             


				<div class="progress">
	           <progress max="<%= lecture.lessons.size %>" value="<%= lecture.lessons.select{ |l| l.users.include? current_user }.count  %>">
	           </progress>

	            <p class="completed-lessons"><%= lecture.lessons.select{ |l| l.users.include? current_user }.count %> out of  <%= lecture.lessons.size %> lessons completed</p>

	           </div>



	        <!--  -->

	           
	           

	           
	          
	          </div> <!-- .lecture-box -->
	          <% end %>

	        </div> <!-- .col-md-4 -->
		
